workflow.yml |

identifier String
steps List 
    - identifier int
    - answer String
    - messageToSend String
    - wasSent bool
    - allowedAnswers List
        -   ans1 String
        -   ans2 String
        -   ans3 String 
        ...


Database:
    table workflows
            id uuid pk 
            type varchar
            createdAt timestamp
        

    table - steps
            id uuid
            workflow_id  ref workflows.id
            step_order int
            createdAt timestamp 

//    table - sentMessages
//            workflow_id ref workflows.id
//            step_id  ref steps.idV

    table - answers
            step_id ref steps.id
            message varchar


    table reviews
        -   id uuid
            workflow_id ref workflows.id
            product_name String
            review_text String
            rating int
